<?xml version="1.0" encoding="utf-8"?><ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/holo_blue_light">
    <item android:id="@android:id/mask"
        android:drawable="@android:color/white"/>

    <item android:left="3px" android:top="3px" android:right="3px">
        <!-- dibuja background y shadow-->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#bdbddb"/>
            <corners android:radius="5px"/>
        </shape>
    </item>

    <item android:left="1px" android:top="1px" android:right="1px" android:bottom="1px">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1px"
                android:color="#bdbdbd">
            </stroke>
            <corners android:radius="5px"/>
        </shape>
    </item>
</ripple>