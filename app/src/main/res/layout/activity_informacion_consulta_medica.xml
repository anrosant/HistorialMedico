                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvDatosMotivoConsulta"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
