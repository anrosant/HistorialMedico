        android:padding="10dp"
        android:text="Consulta MÃ©dica"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
