                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvInfProblemaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
