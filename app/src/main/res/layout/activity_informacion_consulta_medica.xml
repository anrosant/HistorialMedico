                android:text="Diagnosticos"
                android:drawableRight="@drawable/ic_keyboard_arrow_up_cyan_24dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="-3dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/my_style_content_white"
                android:paddingTop="10dp" >

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/lvCargaDiagnosticos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>

                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvInfPermisoMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/my_style_title"
                android:padding="10dp"
                android:text="Permiso Medico"
                android:drawableRight="@drawable/ic_keyboard_arrow_up_cyan_24dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvInfPrescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/my_style_title"
                android:padding="10dp"
                android:text="Prescripcion"
                android:drawableRight="@drawable/ic_keyboard_arrow_up_cyan_24dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="-3dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/my_style_content_white"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tvDatosPrescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
